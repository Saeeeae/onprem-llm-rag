# =============================================================================
# Environment Variables Template
# Copy this file to .env and fill in the values
# =============================================================================

# PostgreSQL Configuration
POSTGRES_USER=admin
POSTGRES_PASSWORD=securepassword
POSTGRES_DB=onprem_llm

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Qdrant Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=documents
QDRANT_VECTOR_SIZE=1024

# vLLM Configuration
MODEL_NAME=meta-llama/Llama-2-70b-chat-hf
MODEL_DIR=/mnt/models
VLLM_URL=http://vllm_service:8000

# Embedding Model
EMBEDDING_MODEL=intfloat/multilingual-e5-large

# Reranker Configuration
RERANKER_MODEL=BAAI/bge-reranker-v2-m3
RERANKER_MODEL_PATH=BAAI/bge-reranker-v2-m3
RERANKER_URL=http://reranker_service:8004

# Microservice URLs (internal Docker network)
OCR_URL=http://ocr_service:8001
EMBEDDING_URL=http://embedding_service:8002
CHUNKING_URL=http://chunking_service:8003

# NAS Mount Path
NAS_MOUNT_PATH=/mnt/nas

# Security
JWT_SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Application Settings
ENVIRONMENT=production
MAX_CONCURRENT_REQUESTS=50
LOG_LEVEL=INFO
SCHEDULER_ENABLED=true
REEMBED_INTERVAL_SECONDS=300
DOC_CHUNK_SYNC_INTERVAL_SECONDS=300
HEALTH_CHECK_INTERVAL_SECONDS=60
REEMBED_BATCH_SIZE=500

# Celery Beat Schedule (Cron format: minute hour day month day_of_week)
NAS_SYNC_SCHEDULE=0 2 * * *

# OCR Configuration
OCR_ENGINE=tesseract
TESSERACT_LANG=eng+kor

# Flower (Celery Monitoring)
FLOWER_USER=admin
FLOWER_PASSWORD=admin

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
